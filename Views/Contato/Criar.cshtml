@model ProjetoMVC.Models.Contato.

@{ 
    ViewData["Title"] = "Criar novo contato";


}

<h1>Novo conteudo</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label">
                    <input asp-for="Nome" class="form-control" />

                </label>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label">
                    <input asp-for="Telefone" class="form-control" />
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label">
                    <input type="checkbox" asp-for="Ativo" class="form-check-input" />
                </label>
            </div>
            
            <br />
            
            <div class="form-group">
                <input type="submit" values="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Voltar</a>
</div>